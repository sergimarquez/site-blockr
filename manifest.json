{
    "manifest_version": 3,
    "name": "SiteBlockr",
    "version": "1.0",
    "description": "Block distracting websites to stay focused.",
    "permissions": ["storage", "webRequest", "webRequestBlocking", "<all_urls>"],
    "background": {
      "service_worker": "dist/background.js"
    },
    "options_page": "options/index.html",
    "icons": {
      "48": "options/public/icon48.png",
      "128": "options/public/icon128.png"
    },
    "action": {
      "default_title": "SiteBlockr"
    }
  }
  