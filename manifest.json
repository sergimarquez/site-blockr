{
    "manifest_version": 3,
    "name": "SiteBlockr",
    "version": "1.0",
    "description": "Block distracting websites to stay focused.",
    "permissions": [
        "storage",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options/index.html",
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_title": "SiteBlockr"
    }
}
  